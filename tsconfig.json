{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "ES6",
  },
  "include": [
    "src"
  ]
}